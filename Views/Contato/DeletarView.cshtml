@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Delete Contato";
}

<div class="text-center">
    <h3> Deseja realmente apagar o contato @Model.Nome?</h3>
</div>


<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-route-pId="@Model.Id" asp-action="Deletar">Confirmar</a>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
</div>
